<%- include("../partials/header"); %>

<link rel="stylesheet" href="/stylesheets/orderDisplay.css"/>
<link rel="stylesheet" href="/stylesheets/previousOrderDisplay.css"/>

<%- include("../partials/navbar"); %>

<div class="container initial-container">
    <div class = "box header-box primary">
        <div class = "main-heading">Previous Orders</div>
    </div>

    <% if(orders.length !== 0){ %>
        <% orders.forEach(order => { %>
            <div class = "box header-box">
                <div class = "main-heading">
                    Order Number: <span class="semi-bold"><%= order.orderNumber %></span>
                </div>
                <div class = "sub-heading">
                    Date: <span class="semi-bold"><%= order.orderDate.toDateString() %></span>
                </div>
                <div class = "sub-heading">
                    Total: <span class="semi-bold">Rs <%= order.total %></span>
                </div>
            </div>

            <% order.items.forEach(item => { %>
                <div class = "item order-item">
                    <div style = "background-image: url('<%= item.product.images[0].url %>');" class = "item-image"></div>
                    <div class="item-details">
                        <div class = "item-name overflow">
                            <a href = "/products/<%= item.product._id %>" class = "link"><%= item.product.name %><%= item.customisation === 'Custom' ? '(Custom)' : '' %></a>
                        </div>
                        <div>
                            <div class = "item-sub_details">
                                <div class = "item-size">
                                    <span>Size: </span><span class="semi-bold"><%= item.product.size %></span>
                                </div>
        
                                <div class = "item-quantity">
                                    <span>Quantity: </span><span class="semi-bold"><%= item.quantity %></span>
                                </div>
                            </div>
        
                            <div class = "item-sub_details">
                                <div class = "item-colour">
                                    <span>Colour: </span><span class="semi-bold"><%= item.product.colour %></span>
                                </div>
        
                                <div class = "item-price">
                                    <span>Item price: </span><span class="semi-bold">Rs <%= item.product.price %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% }) %>
    <% }else{ %>
        <h2 class = "mx-auto">You have no previous orders</h2>
    <% } %>
</div>

<%- include("../partials/footer"); %>