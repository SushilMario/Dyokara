<%- include("../partials/header"); %>

<link rel="stylesheet" href="/stylesheets/form.css"/>
<link rel="stylesheet" href="/stylesheets/app.css"/>

<%- include("../partials/navbar"); %>

<div class="container">
    <div class="form-container">
        <h1 class = "form-heading mb-5">New Category</h1>

        <form action = "/categories/<%= category._id %>?_method=PUT" method = "POST" class = "ui form">
            <h2 class = "form-heading mb-3">Edit</h2>
            
            <div class="field">
                <label class = "label" for = "name">Name</label>
                <input class = "form-input" type="text" name="category[name]" id = "name" value = "<%= category.name %>" disabled required>
            </div>

            <div class="field">
                <label for="category">Byline</label>
                <input type="text" name = "category[byline]" class="form-input" id="byline" value = "<%= category.byline %>">
            </div>

            <button class = "ui button submit" type="submit">Save</button>
        </form>
    </div>
</div>

<%- include("../partials/footer"); %>