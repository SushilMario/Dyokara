<%- include("../partials/header"); %>

<link rel="stylesheet" href="/stylesheets/form.css">
<link rel="stylesheet" href="/stylesheets/app.css">
<link rel="stylesheet" href="/stylesheets/longForm.css">
<link rel="stylesheet" href="/stylesheets/portal.css">

<style>
    @media only screen and (max-width: 768px) 
    {
        .footer-container
        {
            margin-top: 40rem;
        }
    }
</style>

<%- include("../partials/navbar"); %>

<div class="container initial-container">
    <div class="form-container mt-5">
        <h1 class = "form-heading mb-4">Order Confirmed</h1>
        <div class="display-container">
            <h2 class = "mb-5 text-center">
                Your order has successfully been placed! We will contact you shortly regarding payment, and discussion on product customisation, as per your interest
            </h2>
            <div class="field">
                <label for = "phoneDisplay" class="label display-label bold">
                    If you have any further queries, please feel to WhatsApp this number
                </label>
                <input class = "form-input display mb-3" type="text" id = "phoneDisplay" value = "<%= number %>">
            </div>
            <button class = "ui button mb-5" id = "phoneCopy">
                <i class="far fa-copy"></i>
            </button>
        </div>
    </div>

    <div class = "mt-2 text-center">
        <a href="/payments/finish" class="ui button">Done</a>
    </div>
</div>

<script src = "/scripts/gpayCopy.js"></script>

<%- include("../partials/footer"); %>